#!/bin/bash
# strict mode http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'

dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if ! type docker > /dev/null; then
  echo "Docker is required to be present on $PATH"
  exit 0
fi

. "${dir}/parse_yml"

if [ -f "${dir}/../config.yml" ]; then
  eval $(parse_yml ${dir}/../config.yml "config_")
  site="${config_docker_site}"
  volume="${config_docker_volume}"
  network="${config_docker_network}"
else
  site="drupal_cli"
  volume="drupal_web"
  network="drupal_default"
fi

if [[ "${CI:-}" ]] ; then
  image="${site}_scripts"
else
  image="${site}"
fi

docker run -i \
  --entrypoint=/var/www/vendor/bin/php \
  -v "${PWD}":"${PWD}" \
  -v /tmp/:/tmp/ \
  --sig-proxy=true \
  --pid=host \
  --volumes-from "${volume}" \
  --net "${network}" \
  --rm \
  "${image}" /var/www/html/core/scripts/run-tests.sh --php /usr/local/bin/php \
                                                     --url http://nginx \
                                                     --color \
                                                     --verbose \
                                                     "$@"
