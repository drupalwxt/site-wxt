#!/bin/bash
# strict mode http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euo pipefail
IFS=$'\n\t'

echo "Linting Drupal Dockerfile(s) ..."

find . -type f \
       -name Dockerfile \
       -exec sh -c 'ls {} && \
                    printf "\n" && \
                    docker run -v ${PWD}/{}:/Dockerfile:ro \
                               --rm \
                               redcoolbeans/dockerlint' \;
